{% from "universal/navbar-active-route.njk" import activeRoute, activeSubroute, currentRoute %}

{% macro navbar(activePage="", activeSubpage="") %}

{% from "./_navbar-small.njk" import navbarSmall %}

<!-- {{ navbarSmall(activePage, activeSubpage) }} -->

<nav class="navbar navbar-expand-md navbar-light bg-light fixed-top shadow-md bs4 d-none d-xl-block"
  style="background: #fff!important;">
  <article class="container-fluid px-3">
    <section class="row px-5 w-100 mb-1">

      <div class="col-3 pl-5">
        <a class="navbar-brand d-inline" href="/">
          <img src="/assets/img/kbllogo.png">
        </a>
      </div>

      <div class="col-9 mt-auto pr-5">

        <section class="row pb-4">
          <div class="col-12 text-right">
            <a class="kbl-btn-1" target="_blank" rel="noopener noreferrer" href="http://bioinfo.usu.edu/covidTracker/">
                Covid 19 Tracker
            </a>
            <a class="kbl-btn-1 ml-2" href="/contact">
                Contact
            </a>
          </div>
        </section>

        <section class="row">
          <div class="col-12 text-right">
            {% from "./_navbar-options.njk" import navOptions, calcDropdown, anchorGenBS4, toolAnchorGenBS4, genHeaderLink %}

            <!--
            {% for option in navOptions %}
              <span class="bs4 col {{ calcDropdown(option.options)}} {{ currentRoute(option.name, activePage) }}">
                  {{ anchorGenBS4(option.name, option.options, option.link) }}
                  {% if option.options %}
                  <div class="dropdown-menu bs4 nav-dropdown mt-2">
                    {{ genHeaderLink(option.name, option.link) }}
                    {% for subOption in option.options %}
                     {{ toolAnchorGenBS4(subOption.name, subOption.link, option.name, "dropdown-item nav-dropdown-item py-2 {{ activeSubroute(subOption.name, activeSubpage) }}") }}
                    {% endfor %}
                  </div>
                  {% endif %}
              </span>
            {% endfor %}
          -->

            {% from "./_navbar-options.njk" import genHeaderAnchor, dropdownAnchorGen, dropdownAnchorTitleGen %}
            {% for option in navOptions %}
              <span class="col {{ calcDropdown(option.options) }} {{ currentRoute(option.name, activePage) }}">
                {{ genHeaderAnchor(option) }}

                {% if option.options %}
                  <ul class="dropdown-menu nav-dropdown mt-2">
                    {{ dropdownAnchorTitleGen(option) }}
                    {% for suboption in option.options %}
                      {{ dropdownAnchorGen(suboption) }}
                    {% endfor %}
                  </ul>
                {% endif %}
              </span>
            {% endfor %}

          </div>
        </section>

      </div>

    </section>
  </article>
</nav>
{% endmacro %}
