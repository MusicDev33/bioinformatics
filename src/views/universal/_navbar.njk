{% from "universal/navbar-active-route.njk" import activeRoute, activeSubroute %}

{% macro navbar(activePage="", activeSubpage="") %}

<nav class="navbar navbar-white navbar-kawsa navbar-fixed-top">
  <article class="container">
      <section class="navbar-header">
          <button aria-controls="navbar" aria-expanded="false" class="navbar-toggle collapsed" data-target="#navbar" data-toggle="collapse" type="button">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>
          <a style="text-decoration:none" class="navbar-brand" href="/">
            <img alt="" class="img-responsive" src="assets/img/red_logo.png">
          </a>
          <div class="logo-heading">KAABiL</div>

          <div class="vl">
              <div class="logo-text">
                  <b style="color: #9d164f;">K</b>aundal
                  <b style="color: #9d164f;">A</b>rtificial intelligence
                  <br>
                  &
                  <b style="color: #9d164f;">A</b>dvanced
                  <b style="color: #9d164f;">Bi</b>oinformatics
                  <b style="color: #9d164f;">L</b>ab
              </div>
          </div>
      </section>
      <section class="navbar-collapse collapse sabbi-navbar-collapse  navbar-nav-hov_underline" id="navbar">
          <div class="nav-btn-wrap btn-group pull-right">
              <a class="kbl-btn-1" target="_blank" rel="noopener noreferrer" href="http://bioinfo.usu.edu/covidTracker/">
                  Covid 19 Tracker
              </a>
              <a class="kbl-btn-1" href="#enroll" style="margin-left: 15px!important;">
                  Join Research
              </a>
          </div>
          <ul class="nav navbar-nav navbar-right" id="menu-main-nav">

            {% from "./_navbar-options.njk" import navOptions, calcDropdown, anchorGen, toolAnchorGen %}

            {% for option in navOptions %}
              <li class="nav-option {{ calcDropdown(option.options)}} {{ activeRoute(option.name, activePage) }}">
                  {{ anchorGen(option.name, option.options, option.link) }}
                  {% if option.options %}
                  <ul class="dropdown-menu" role="menu">
                    {% for subOption in option.options %}
                      <li class="{{ activeSubroute(subOption.name, activeSubpage) }}">
                        {{ toolAnchorGen(subOption.name, subOption.link, option.name) }}
                      </li>
                    {% endfor %}
                  </ul>
                  {% endif %}
              </li>
            {% endfor %}

          </ul>
      </section>
  </article>
</nav>
{% endmacro %}
