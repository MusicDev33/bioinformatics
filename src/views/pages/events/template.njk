{% macro eventPage(title='DEFAULT', fileName='', event={img: '', location: '', date: '', media: []}) %}
{% set file = "pages/events/" + fileName + "/content.njk" %}
<!DOCTYPE html>
<html class="no-js" lang="en">
  {% from "universal/_header.njk" import header %}
  {{ header() }}

  <body>
    {% from "universal/_navbar.njk" import navbar %}
    {{ navbar("Events") }}

    <div class="container blog" style="margin-top: 103px;">
      <div class="row justify-content-center">
        <div class="col-6 text-center">
          <h1 class="text-center blog">{{ title }}</h1>
          <img class="img-fluid col-12 p-0" src="{{ event.img }}">
          <div class="text-start event-details mt-2">
            <span class="me-4"><i class="ion-location me-2"></i>{{ event.location }}</span>
            <span><i class="ion-calendar me-3"></i>{{ event.date }}</span>
          </div>
          <div class="text-start">
            {% include (file) %}
            <h3 class="kbl-heading pt-4">From Media</h3>
          </div>
          <div class="row">
            {% for pic in event.media %}
              <img class="col-12 col-sm-6 col-md-4 my-3 event-thumbnail"
                data-bs-toggle="modal" data-bs-target="#modal{{ loop.index0 }}" src="{{ pic }}">

              <div class="modal fade" id="modal{{ loop.index0 }}" tabindex="-1">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-body">
                      <section class="container-fluid">
                        <div class="row no-gutters">
                          <div class="col-12">
                            <img class="img-fluid" src="{{ pic }}"/>
                          </div>
                        </div>
                      </section>
                    </div>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>

    {% include "universal/_footer.njk" %}
    {% from "universal/_footer-scripts.njk" import scripts %}
    {{ scripts() }}
  </body>
</html>
{% endmacro %}
