{% macro ctxMenu() %}
  <article class="kbl-ctx-menu" id="ctx-menu">
    <div class="ctx-heading" id="ctx-heading"></div>
    <div class="menu-item" data-toggle="modal" data-target="#appointmentModal">Create Appointment</div>
    <div class="ctx-heading" id="appt-header">Appointments</div>
    <div class="appt-container" id="appt-container">

    </div>
  </article>
{%  endmacro %}

{% macro calendarSmall() %}
  {{ ctxMenu() }}
  <article class="container-fluid calendar" id="calendar">
    <div class="row my-3 justify-content-center kbl-header-bar py-1">
      <section class="col-1 text-left my-auto">
        <i class="fas fa-chevron-left arrow-single" id="calArrowLeft"></i>
      </section>
      <section class="col-8 text-center">
        <div id="monthName" class="month-title d-inline-block align-bottom">
          <!-- Generated by calendar-small.js -->
        </div>
      </section>
      <section class="col-1 text-right my-auto">
        <i class="fas fa-chevron-right arrow-single" id="calArrowRight"></i>
      </section>
    </div>

    <div class="row mb-1" id="weekDays">

    </div>
  </article>

  {{ appointmentModal() }}

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/assets/js/kbl/calendar-small.js"></script>
  <script src="/assets/js/kbl/calendar-ctx-menu.js"></script>
  <script src="/assets/js/kbl/calendar-request.js"></script>
{% endmacro %}

{% macro appointmentModal() %}
  <section class="modal" tabindex="-1" id="appointmentModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <section class="container-fluid">
            <div class="row my-2">
              <div class="col">
                <h5 class="modal-title" id="appointmentModalTitle">Appointment</h5>
              </div>
            </div>
            <div class="row my-4">
              <div class="col-12">
                <div class="row">
                  <div class="col-auto my-auto">
                    Time:
                  </div>
                  <div class="col-auto text-center">
                    <i class="fas fa-angle-up time-arrow" id="hourIncrement"></i>
                    <input class="form-control time-form" placeholder="12" id="hourForm" disabled>
                    <i class="fas fa-angle-down time-arrow" id="hourDecrement"></i>
                  </div>

                  <div class="col-auto text-center">
                    <i class="fas fa-angle-up time-arrow" id="minuteIncrement"></i>
                    <input class="form-control time-form" placeholder="00" id="minuteForm" disabled>
                    <i class="fas fa-angle-down time-arrow" id="minuteDecrement"></i>
                  </div>

                  <div class="col-auto text-center my-auto">
                    <span id="amLabel" class="meridiem-label selected p-2">AM</span>
                  </div>

                  <div class="col-auto text-center my-auto">
                    <span id="pmLabel" class="meridiem-label p-2">PM</span>
                  </div>
                </div>
              </div>
              <div class="col-12">
                <input class="form-control kbl-form" placeholder="Name" id="appointmentName"/>
                <input class="form-control kbl-form" placeholder="Email" id="appointmentEmail"/>
                <textarea class="form-control kbl-form" placeholder="Purpose of meeting" id="appointmentDesc"></textarea>
              </div>
            </div>
            <div class="row my-2">
              <div class="col text-right">
                <button type="button" class="btn kbl-btn-2-solid mr-3" data-dismiss="modal">Close</button>
                <button type="button" class="btn kbl-btn-1" id="createAppointmentButton">Request Appointment</button>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </section>
{% endmacro %}
